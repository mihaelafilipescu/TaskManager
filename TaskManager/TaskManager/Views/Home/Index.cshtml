@{
    ViewData["Title"] = "TaskManager";
    var isAuth = User?.Identity?.IsAuthenticated ?? false;
}

<div class="container py-5">

    <!-- HERO -->
    <div class="row align-items-center g-4 mb-5">
        <div class="col-lg-7">
            <span class="badge text-bg-light border mb-3">Task Management Platform</span>
            <h1 class="display-5 fw-bold mb-3">
                Planifica proiecte. Asigneaza task-uri. Urmareste progresul.
            </h1>
            <p class="lead text-secondary mb-4">
                TaskManager este o platforma web pentru echipe: proiecte, membri, task-uri, comentarii,
                dashboard personal si rezumat AI pentru fiecare proiect.
            </p>

            <div class="d-flex flex-wrap gap-2">
                @if (!isAuth)
                {
                    <a class="btn static btn-lg" asp-area="Identity" asp-page="/Account/Register">
                        Creeaza cont
                    </a>
                    <a class="btn btn-outline-secondary btn-lg" asp-area="Identity" asp-page="/Account/Login">
                        Autentificare
                    </a>
                }
                else
                {
                    <a class="btn btn-success btn-lg" asp-controller="Dashboard" asp-action="Index">
                        Dashboard-ul meu
                    </a>
                    <a class="btn btn-outline-secondary btn-lg" asp-controller="Projects" asp-action="Index">
                        Proiectele mele
                    </a>
                }
            </div>

            <div class="mt-4 small text-secondary">
                <i class="bi bi-box2-heart-fill"></i><span class="me-3"> Deadline-uri clare</span>
                <i class="bi bi-box2-heart-fill"></i><span class="me-3"> Statusuri standard</span>
                <i class="bi bi-box2-heart-fill"></i><span class="me-3"> Colaborare in echipa</span>
            </div>
        </div>

        <!-- RIGHT MOCK CARD -->
        <div class="col-lg-5">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="fw-semibold">Preview: Dashboard</div>
                        <span class="badge functional">Live</span>
                    </div>

                    <div class="p-3 rounded-3 border bg-light mb-3">
                        <div class="d-flex justify-content-between">
                            <div class="fw-semibold">Proiect: Website Portofoliu</div>
                            <span class="badge progres">In progress</span>
                        </div>
                        <div class="text-secondary small mt-1">3 task-uri active • 1 deadline in 2 zile</div>
                    </div>

                    <div class="p-3 rounded-3 border mb-2">
                        <div class="d-flex justify-content-between">
                            <div class="fw-semibold">Task: Design homepage</div>
                            <span class="badge progres">In Progress</span>
                        </div>
                        <div class="text-secondary small mt-1">Assigned to: you • Due: Friday</div>
                    </div>

                    <div class="p-3 rounded-3 border mb-2">
                        <div class="d-flex justify-content-between">
                            <div class="fw-semibold">Task: Setare roluri</div>
                            <span class="badge static">Not Started</span>
                        </div>
                        <div class="text-secondary small mt-1">Assigned to: teammate • Due: Monday</div>
                    </div>

                    <div class="p-3 rounded-3 border">
                        <div class="d-flex justify-content-between">
                            <div class="fw-semibold">Task: Finalizare migratii</div>
                            <span class="badge bine">Completed</span>
                        </div>
                        <div class="text-secondary small mt-1">Done today</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- FEATURES -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <div class="fs-4 mb-2">👥</div>
                    <h5 class="fw-bold">Proiecte & echipa</h5>
                    <p class="text-secondary mb-0">
                        Creezi proiecte, devii organizator automat si gestionezi membrii echipei.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <div class="fs-4 mb-2">📈</div>
                    <h5 class="fw-bold">Task-uri & status</h5>
                    <p class="text-secondary mb-0">
                        Task-uri cu start/end, statusuri (Not Started / In Progress / Completed) si media.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <div class="fs-4 mb-2">✨</div>
                    <h5 class="fw-bold">Rezumat AI</h5>
                    <p class="text-secondary mb-0">
                        Pe fiecare proiect poti genera un rezumat al progresului si deadline-urilor.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- HOW IT WORKS -->
    <div class="row align-items-center g-4">
        <div class="col-lg-6">
            <h2 class="fw-bold mb-3">Cum functioneaza</h2>
            <ul class="list-unstyled">
                <li class="mb-2"><i class="bi bi-bookmark-heart-fill"></i> Creezi un proiect si devii organizator.</li>
                <li class="mb-2"><i class="bi bi-bookmark-heart-fill"></i> Inviti membri, apoi creezi si atribui task-uri.</li>
                <li class="mb-2"><i class="bi bi-bookmark-heart-fill"></i> Echipa actualizeaza statusul si colaboreaza prin comentarii.</li>
                <li class="mb-2"><i class="bi bi-bookmark-heart-fill"></i> Dashboard-ul iti arata ce e urgent</li>
