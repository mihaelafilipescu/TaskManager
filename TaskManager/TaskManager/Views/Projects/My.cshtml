@model List<TaskManager.Models.Project>

@{
    ViewData["Title"] = "My projects";
}

<div class="container py-5">

    <!-- Header -->
    <div class="row align-items-end g-3 mb-4">
        <div class="col-12 col-lg-8">
            <span class="badge text-bg-light border mb-3">Projects</span>
            <h1 class="display-6 fw-bold mb-2">My projects</h1>
            <p class="text-secondary mb-0">
                Projects you created as an organizer. Create a new one anytime.
            </p>
        </div>

        <div class="col-12 col-lg-4 d-flex justify-content-lg-end">
            <a class="btn btn-success btn-lg"
               asp-controller="Projects"
               asp-action="Create">
                <i class="bi bi-plus-lg"></i> Create project
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body p-4 p-md-5">
                <div class="d-flex align-items-center gap-3">
                    <div class="fs-2">📌</div>
                    <div>
                        <h5 class="fw-bold mb-1">No projects yet</h5>
                        <p class="text-secondary mb-0">
                            Create your first project to start organizing tasks and collaborating with your team.
                        </p>
                    </div>
                </div>

                <div class="mt-4">
                    <a class="btn btn-success btn-lg"
                       asp-controller="Projects"
                       asp-action="Create">
                        <i class="bi bi-plus-lg"></i> Create your first project
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var p in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 rounded-4">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="fw-bold mb-0">@p.Title</h5>
                                <span class="badge @(p.IsActive ? "text-bg-success" : "text-bg-secondary")">
                                    @(p.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>

                            <p class="text-secondary mb-4">
                                @(p.Description.Length > 140 ? p.Description.Substring(0, 140) + "..." : p.Description)
                            </p>

                            <div class="d-flex justify-content-between small text-secondary">
                                <span>
                                    <i class="bi bi-calendar3"></i>
                                    @p.CreatedAt.ToLocalTime().ToString("dd MMM yyyy")
                                </span>
                                <span>
                                    <i class="bi bi-person-badge"></i>
                                    Organizer
                                </span>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-0 px-4 pb-4">
                            <div class="d-flex gap-2">
                                <!-- Members -->
                                <a class="btn btn-outline-secondary w-100"
                                   asp-controller="Projects"
                                   asp-action="Members"
                                   asp-route-id="@p.Id">
                                    <i class="bi bi-people"></i> Members
                                </a>

                                <!-- Task-uri -->
                                <a class="btn btn-outline-primary w-100"
                                   asp-controller="TaskItems"
                                   asp-action="Index"
                                   asp-route-projectId="@p.Id">
                                    <i class="bi bi-list-check"></i> Task-uri
                                </a>
                            </div>

                            <div class="d-flex gap-2 mt-2">
                                <a class="btn btn-outline-dark w-100"
                                   asp-controller="Projects"
                                   asp-action="Details"
                                   asp-route-id="@p.Id">
                                    <i class="bi bi-box-arrow-up-right"></i> Details
                                </a>

                                @* Aici afisez butonul de Delete doar daca sunt Admin sau daca eu sunt organizerul proiectului.
                                   Chiar daca in lista asta apar doar proiectele mele, regula asta e buna si sigura (si pentru admin). *@

                                @* Aici iau userId direct din claims, fara FindFirstValue, ca sa evit problema de using/extension in Razor *@
                                @{
                                    var currentUserId = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                                }

                                @if (User.IsInRole("Admin") || p.OrganizerId == currentUserId)
                                {
                                    <a class="btn btn-outline-danger w-100"
                                       asp-controller="Projects"
                                       asp-action="Delete"
                                       asp-route-id="@p.Id">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                }
                            </div>
                        </div>


                    </div>
                </div>
            }
        </div>
    }

</div>
