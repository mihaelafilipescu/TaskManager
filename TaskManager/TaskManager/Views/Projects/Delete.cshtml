@model TaskManager.Models.Project

@{
    ViewData["Title"] = "Delete project";
}

<div class="container py-5">

    @* Aici ma protejez: daca Model ajunge null, nu vreau sa crape view-ul *@
    @if (Model == null)
    {
        <div class="alert alert-danger">
            Project could not be loaded.
        </div>

        <a asp-action="My" class="btn btn-outline-secondary">
            Back to My projects
        </a>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">

                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body p-4 p-md-5">

                        <h2 class="fw-bold text-danger mb-3">
                            Delete project
                        </h2>

                        <p class="text-secondary mb-4">
                            Are you sure you want to delete this project?
                            This action will make the project inactive.
                        </p>

                        <div class="border rounded-3 p-3 mb-4 bg-light">
                            <h5 class="fw-bold mb-1">@Model.Title</h5>
                            <p class="mb-0 text-secondary">@Model.Description</p>
                        </div>

                        @* POST + AntiForgeryToken ca sa evit stergerea accidentala *@
                        <form asp-action="Delete"
                              asp-route-id="@Model.Id"
                              method="post">
                            @Html.AntiForgeryToken()

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-danger w-100">
                                    Yes, delete
                                </button>

                                <a asp-action="My" class="btn btn-outline-secondary w-100">
                                    Cancel
                                </a>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    }

</div>
