@model TaskManager.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<div class="container mt-4">

    <!-- Titlul proiectului + status -->
    <div class="d-flex justify-content-between align-items-start mb-3">
        <div>
            <h1 class="mb-1">@Model.Title</h1>
            <p class="text-muted">@Model.Description</p>
        </div>

        @if (Model.IsActive)
        {
            <span class="badge bg-success">Active</span>
        }
        else
        {
            <span class="badge bg-secondary">Inactive</span>
        }
    </div>

    <hr />

    <!-- Informatii generale despre proiect -->
    <div class="row mb-4">
        <div class="col-md-4">
            <strong>Created on:</strong><br />
            @Model.CreatedAt.ToString("dd MMM yyyy")
        </div>

        <div class="col-md-4">
            <strong>Organizer:</strong><br />
            @ViewBag.OrganizerName
        </div>

        <div class="col-md-4">
            <strong>Members count:</strong><br />
            @Model.Members.Count
        </div>
    </div>

    <hr />

    <!-- Lista de membri -->
    <h3>Members</h3>

    @if (Model.Members.Any())
    {
        <ul class="list-group mb-4">
            @foreach (var member in Model.Members)
            {
                <li class="list-group-item">
                    <span>
                    @* Aici afisez username-ul; daca nu e incarcat/nu exista, cad pe email, apoi pe id *@

                    @(member.User?.UserName ?? member.User?.Email ?? member.UserId)
                    </span>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">No members in this project.</p>
    }

    <hr />

    <!-- Lista de task-uri -->
    <h3>Tasks</h3>

    @if (Model.TaskItems != null && Model.TaskItems.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model.TaskItems)
                {
                    <tr>
                        <td>@task.Title</td>
                        <td>@task.Status</td>
                        <td>@task.StartDate.ToString("dd MMM yyyy")</td>
                        <td>@task.EndDate.ToString("dd MMM yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No tasks for this project.</p>
    }


    <!-- Butoane de navigare -->
    <div class="mt-4 d-flex gap-2">
        <a asp-action="Index" class="btn btn-secondary">
            Back to projects
        </a>

        <a asp-controller="TaskItems"
           asp-action="Index"
           asp-route-projectId="@Model.Id"
           class="btn btn-primary">
            Tasks
        </a>
    </div>

</div>
