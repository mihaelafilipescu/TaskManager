@model List<TaskManager.Models.TaskItem>

@{
    var project = ViewBag.Project as TaskManager.Models.Project;

    // Aici iau flag-ul trimis din controller (Organizer/Admin = true, Member = false)
    var canModify = (bool?)(ViewBag.CanModify) ?? false;

    ViewData["Title"] = "Tasks";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h2 class="mb-1">Tasks - @project?.Title</h2>
        <div class="text-muted" style="font-size: 13px;">
            Click <strong>Open</strong> to view details, assign members, update status, and manage comments.
        </div>
    </div>

    @* Aici afisez butonul de Create doar daca userul are voie sa modifice (Organizer/Admin) *@
    @if (canModify)
    {
        <a class="btn btn-primary"
           href="@Url.Action("Create", "TaskItems", new { projectId = project!.Id })">
            Create task
        </a>
    }
</div>

<table class="table align-middle">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Start</th>
            <th>End</th>
            <th>Media</th>
            <th></th>

            @* Aici arat coloana Actions doar daca userul poate edita/sterge *@
            @if (canModify)
            {
                <th class="text-end">Actions</th>
            }
        </tr>
    </thead>

    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td style="min-width: 220px;">
                    @* Titlul ramane link spre pagina Details *@
                    <a class="text-decoration-none"
                       href="@Url.Action("Details", "TaskItems", new { projectId = t.ProjectId, id = t.Id })">
                        @t.Title
                    </a>
                </td>

                <td>@t.Status</td>
                <td>@t.StartDate.ToString("dd MMM yyyy")</td>
                <td>@t.EndDate.ToString("dd MMM yyyy")</td>

                @* Aici afisez media diferit in functie de tip *@
                <td style="min-width: 260px;">
                    @if (t.MediaType == TaskManager.Models.MediaType.Image)
                    {
                        @* Thumbnail + click sa se deschida full *@
                        <a href="@t.MediaContent" target="_blank" title="Open image">
                            <img src="@t.MediaContent"
                                 alt="task image"
                                 style="max-width:120px;height:auto;border:1px solid #ddd;border-radius:10px;padding:6px;" />
                        </a>
                        <div class="text-muted" style="font-size: 12px;">
                            Click image to open full
                        </div>
                    }
                    else if (t.MediaType == TaskManager.Models.MediaType.Video)
                    {
                        <a class="btn btn-sm btn-outline-primary"
                           href="@t.MediaContent"
                           target="_blank">
                            Open video
                        </a>
                        <div class="text-muted" style="font-size: 12px;">
                            Saved as URL
                        </div>
                    }
                    else
                    {
                        @* Aici arat un snippet din text, ca sa nu ocup prea mult spatiu *@
                        var text = t.MediaContent ?? "";
                        var snippet = text.Length > 80 ? text.Substring(0, 80) + "..." : text;

                        <span class="text-muted">@snippet</span>
                    }
                </td>

                @* Buton dedicat pentru Details, ca sa fie clar unde intri pt asignare/status/comentarii *@
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary"
                       href="@Url.Action("Details", "TaskItems", new { projectId = t.ProjectId, id = t.Id })">
                        Open
                    </a>
                </td>

                @* Aici arat Edit/Delete doar daca userul are voie sa modifice *@
                @if (canModify)
                {
                    <td class="text-end" style="white-space: nowrap;">
                        <a class="btn btn-sm btn-outline-secondary"
                           href="@Url.Action("Edit", "TaskItems", new { projectId = t.ProjectId, id = t.Id })">
                            Edit
                        </a>

                        <a class="btn btn-sm btn-outline-danger ms-2"
                           href="@Url.Action("Delete", "TaskItems", new { projectId = t.ProjectId, id = t.Id })">
                            Delete
                        </a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@* un mesaj mic pentru membrii care au doar view *@
@if (!canModify)
{
    <div class="text-muted" style="font-size: 13px;">
        You can view tasks in this project, but only the organizer can create, edit, or delete tasks.
    </div>
}
