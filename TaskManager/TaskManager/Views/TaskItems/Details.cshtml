@model TaskManager.ViewModels.TaskItems.TaskDetailsViewModel

@{
    ViewData["Title"] = "Task details";
    var t = Model.Task;

    bool canModifyOwnComment(string commentUserId)
    {
        return commentUserId == Model.CurrentUserId || User.IsInRole("Admin");
    }
}
@{
    Layout = "_Layout";
}


<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h2 class="mb-1">Task details</h2>
        <div class="text-muted">Project ID: @t.ProjectId</div>
    </div>

    <a class="btn btn-outline-secondary"
       href="@Url.Action("Index", "TaskItems", new { projectId = t.ProjectId })">
        Back to tasks
    </a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">@t.Title</h4>
        <p class="card-text">@t.Description</p>

        <div class="row">
            <div class="col-md-4">
                <div><strong>Status:</strong> @t.Status</div>
            </div>
            <div class="col-md-4">
                <div>
                    <strong>Assignee:</strong>
                    @if (!string.IsNullOrWhiteSpace(Model.CurrentAssigneeLabel))
                    {
                        <span>@Model.CurrentAssigneeLabel</span>
                    }
                    else
                    {
                        <span class="text-muted">Unassigned</span>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <div><strong>Start:</strong> @t.StartDate.ToString("dd MMM yyyy")</div>
            </div>
            <div class="col-md-4">
                <div><strong>End:</strong> @t.EndDate.ToString("dd MMM yyyy")</div>
            </div>
        </div>

        <hr />

        @* Asignare + status update (cerinta Sprint 3). UI e doar pentru confort, controller-ul valideaza tot. *@

        @if (TempData["AssignError"] != null)
        {
            <div class="alert alert-danger py-2">@TempData["AssignError"]</div>
        }

        <div class="row g-3">

            @* Daca nu e organizer/admin, nu arat deloc zona de Assign *@
            @if (Model.CanAssign)
            {
                <div class="col-lg-6">
                    <div class="border rounded-3 p-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <h5 class="mb-0">Assign</h5>
                        </div>

                        <form asp-action="Assign" asp-controller="TaskItems" method="post" class="mt-3">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="AssignForm.TaskId" />
                            <input type="hidden" asp-for="AssignForm.ProjectId" />

                            <div class="mb-2">
                                <label class="form-label">Assign to member</label>
                                <select class="form-select"
                                        asp-for="AssignForm.SelectedUserId"
                                        asp-items="Model.AssignForm.MemberOptions"></select>
                            </div>

                            <button type="submit" class="btn btn-outline-primary">
                                Save assignee
                            </button>
                        </form>
                    </div>
                </div>
            }

            @* Daca nu e admin/organizer si nici nu e task-ul lui, nu arat deloc zona de Status *@
            @if (Model.CanChangeStatus)
            {
                <div class="col-lg-6">
                    <div class="border rounded-3 p-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <h5 class="mb-0">Status</h5>
                        </div>

                        <form asp-action="UpdateStatus" asp-controller="TaskItems" method="post" class="mt-3">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="StatusForm.TaskId" />
                            <input type="hidden" asp-for="StatusForm.ProjectId" />

                            <div class="mb-2">
                                <label class="form-label">Change status</label>
                                <select class="form-select"
                                        asp-for="StatusForm.NewStatus"
                                        asp-items="Html.GetEnumSelectList<TaskManager.Models.TaskStatus>()"></select>
                            </div>

                            <button type="submit" class="btn functional">Update status</button>


                        </form>
                    </div>
                </div>
            }

        </div>

        <hr />

        <div>
            <strong>Media</strong>
            <div class="mt-2">
                @if (t.MediaType == TaskManager.Models.MediaType.Image)
                {
                    <a href="@t.MediaContent" target="_blank" title="Open image">
                        <img src="@t.MediaContent"
                             alt="task image"
                             style="max-width:420px;height:auto;border:1px solid #ddd;border-radius:12px;padding:8px;" />
                    </a>
                    <div class="text-muted" style="font-size: 12px;">Click image to open full</div>
                }
                else if (t.MediaType == TaskManager.Models.MediaType.Video)
                {
                    <a class="btn btn-sm btn-outline-primary" href="@t.MediaContent" target="_blank">
                        Open video
                    </a>
                    <div class="text-muted" style="font-size: 12px;">Saved as URL</div>
                }
                else
                {
                    <div class="text-muted">@t.MediaContent</div>
                }
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="mb-3">Comments</h4>

        @if (TempData["CommentError"] != null)
        {
            <div class="alert alert-danger py-2">@TempData["CommentError"]</div>
        }

        @if (Model.Comments.Count == 0)
        {
            <div class="text-muted">No comments yet.</div>
        }
        else
        {
            foreach (var c in Model.Comments)
            {
                <div class="border rounded-3 p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <div>
                            <strong>@(c.User?.FullName ?? c.User?.UserName ?? "User")</strong>
                            <span class="text-muted" style="font-size: 12px;">
                                • @c.CreatedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")
                            </span>
                        </div>

                        @if (canModifyOwnComment(c.UserId))
                        {
                            <div class="d-flex gap-2">
                                <a class="btn btn-sm btn-outline-secondary"
                                   href="@Url.Action("Edit", "Comments", new { id = c.Id })">
                                    Edit
                                </a>

                                <a class="btn btn-sm btn-outline-danger"
                                   href="@Url.Action("Delete", "Comments", new { id = c.Id })">
                                    Delete
                                </a>
                            </div>
                        }
                    </div>

                    <div>@c.Text</div>
                </div>
            }
        }

        <hr />

        <h5 class="mb-2">Add a comment</h5>

        <form asp-controller="Comments" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="NewComment.TaskId" />

            <div class="mb-2">
                <textarea class="form-control"
                          rows="3"
                          asp-for="NewComment.Text"
                          placeholder="Write a comment..."></textarea>
                <span class="text-danger" asp-validation-for="NewComment.Text"></span>
            </div>

            <button type="submit" class="btn btn-primary">Post comment</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
